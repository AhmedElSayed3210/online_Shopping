<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>logedin</filter-name>
        <filter-class>filters.logedin</filter-class>
    </filter>
    <filter>
        <filter-name>notloged</filter-name>
        <filter-class>filters.notloged</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>logedin</filter-name>
        <url-pattern>/profile.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>logedin</filter-name>
        <url-pattern>/add_product.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>logedin</filter-name>
        <url-pattern>/user_order.jsp</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>add_product</servlet-name>
        <servlet-class>servelets.add_product</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>servelets.register</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>servelets.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>delete_prodect</servlet-name>
        <servlet-class>servelets.delete_prodect</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>delete_user</servlet-name>
        <servlet-class>servelets.delete_user</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>contact</servlet-name>
        <servlet-class>servelets.contact</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>cart</servlet-name>
        <servlet-class>servelets.cart</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>product_summary_operation</servlet-name>
        <servlet-class>servelets.product_summary_operation</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>finaly_cart</servlet-name>
        <servlet-class>servelets.finaly_cart</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>servelets.logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>admin_order_don</servlet-name>
        <servlet-class>servelets.admin_order_don</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>sendmessage</servlet-name>
        <servlet-class>admin.sendmessage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>forgetpass</servlet-name>
        <servlet-class>servelets.forgetpass</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>resetpass</servlet-name>
        <servlet-class>servelets.resetpass</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>add_product</servlet-name>
        <url-pattern>/add_product</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
